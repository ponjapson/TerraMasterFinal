<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/cardview_border"
        android:padding="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSurveyor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:background="@android:color/white">

            <!-- Outer LinearLayout for the Card content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!-- Profile Image Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profile_pic"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"
                        android:clipToOutline="true"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <!-- User Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsm"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/startDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ongoing"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Document Progress Label -->
                <TextView
                    android:id="@+id/progressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Progress"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="70dp"/>

                <!-- Step Progress Bar -->
                <LinearLayout
                    android:id="@+id/stepProgressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="5"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <!-- Step 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">
                        <View
                            android:id="@+id/step1"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/YellowGreen"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prepare Blueprint"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Step 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">
                        <View
                            android:id="@+id/step2"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/DarkYellow"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit Blueprint"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Step 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">
                        <View
                            android:id="@+id/step3"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/DarkYellow"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Follow-up Approval"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Step 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">
                        <View
                            android:id="@+id/step4"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/DarkYellow"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ready to Claim"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Step 5 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">
                        <View
                            android:id="@+id/step5"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/DarkYellow" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/stepProgressLayoutProcessor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <!-- Step 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">

                        <View
                            android:id="@+id/step1Processor"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/YellowGreen"
                            android:layout_marginBottom="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="prepare the Tax declaration"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Step 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">

                        <View
                            android:id="@+id/step2Processor"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginBottom="4dp"
                            android:background="@color/DarkYellow"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="approval Deparment Head"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Step 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">

                        <View
                            android:id="@+id/step3Processor"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/DarkYellow"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ready to Claim"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="2dp">

                        <View
                            android:id="@+id/step4Processor"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/DarkYellow"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>